{% extends 'base.html.twig' %}

{% block title %}Anciennes ventes
	<meta name="Listes des ventes" content="Liste des ventes passées réalisées par l'experte Perle Do"/>

{% endblock %}

{% block body %}
	<h1>Anciennes vente</h1>
	{% for vente in ventes %}
		<div class="card vente-card mx-auto my-4" loading="lazy">
			<a href="#" class="link-underline link-underline-opacity-0">
				<h4 class="card-header h4-vente-a">Vente du
					{{ vente.dateVente ? vente.dateVente|date('d-m-Y H:i:s') : '' }}</h4>
			</a>
			<div class="card-body">
				<h4 class="card-title">{{ vente.nomVente }}
					chez
					{{ vente.commissairePriseur }}</h4>
				<p class="card-text p-vente text-center">{{ vente.adresse }}</p>
				<p class="card-text p-vente text-center">{{ vente.codePostal }}
					{{ vente.ville }}</p>
				<p class="card-text p-vente">Exposition des lots le
					{{ vente.dateExposition ? vente.dateExposition|date('d-m-Y') : '' }}
					entre
					{{ vente.heureExposition }}</p>

				{% for lot in lots[vente.id]|rand(0, 3) %}
					<p class="card-text p-vente">Lot n°
<p>{{ lot.description }}</p>
				{% endfor %}
				<a class="btn btn-primary" href="{{ path('app_vente_show', {'id': vente.id}) }}">Voir la vente</a> 
			</div>
		</div>
	{% else %}
		<p>
			Pas de ventes terminées enregistrées actuellement</p>
	{% endfor %}
{% endblock %}
