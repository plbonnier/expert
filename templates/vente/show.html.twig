{% extends 'base.html.twig' %}

{% block title %}Vente{% endblock %}

{% block body %}
    <h1>{{ vente.nomVente }}</h1>
    {% if vente.passe %} 
        <h2 class="h2-accueil">Vente du {{ vente.dateVente|date('Y-m-d') }}</h2>
        <h2 class="h2-accueil">chez {{ vente.commissairePriseur }}</h2>
        <p class="p-vente">{{ vente.ville }}</p>
    {% else %}
        <h2 class="h2-accueil">Cette vente aura lieu le {{ vente.dateVente|date('Y-m-d Ã  H:i') }}</h2>
        <h2 class="h2-accueil">chez {{ vente.commissairePriseur }}</h2>
        <p class="p-vente">{{ vente.adresse }}, {{ vente.codePostal }} {{ vente.ville }}</p>
    {% endif %}


    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ vente.id }}</td>
            </tr>
            <tr>
                <th>Passe</th>
                <td>{{ vente.passe ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Futur</th>
                <td>{{ vente.futur ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>DateVente</th>
                <td>{{ vente.dateVente ? vente.dateVente|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>CommissairePriseur</th>
                <td>{{ vente.commissairePriseur }}</td>
            </tr>
            <tr>
                <th>Adresse</th>
                <td>{{ vente.adresse }}</td>
            </tr>
            <tr>
                <th>CodePostal</th>
                <td>{{ vente.codePostal }}</td>
            </tr>
            <tr>
                <th>Ville</th>
                <td>{{ vente.ville }}</td>
            </tr>
            <tr>
                <th>NomVente</th>
                <td>{{ vente.nomVente }}</td>
            </tr>
            <tr>
                <th>DateExposition</th>
                <td>{{ vente.dateExposition ? vente.dateExposition|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>HeureExposition</th>
                <td>{{ vente.heureExposition }}</td>
            </tr>
        </tbody>
    </table>

