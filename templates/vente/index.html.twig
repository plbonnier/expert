{% extends 'base.html.twig' %}

{% block title %}Ventes
	<meta name="Listes des ventes" content="Liste des ventes passées et futures réalisées par l'experte Perle Do"/>

{% endblock %}

{% block body %}
	<h1>Liste des vente</h1>

	<h2>Ventes terminées</h2>
	{% for vente in ventes %}
		{% if vente.passe %}
			<div class="card">
				<a href="#">
					<h5 class="card-header">{{ vente.dateVente ? vente.dateVente|date('d-m-Y H:i:s') : '' }}</h5>
				</a>
				<div class="card-body">
					<h5 class="card-title">{{ vente.nomVente }}
						chez
						{{ vente.commissairePriseur }}</h5>
					<p class="card-text">{{ vente.adresse }}</p>
					<p class="card-text">{{ vente.codePostal }}
						{{ vente.ville }}</p>
					<p class="card-text">Exposition des lots le
						{{ vente.dateExposition ? vente.dateExposition|date('d-m-Y') : '' }}
						entre
						{{ vente.heureExposition }}</p>
				</div>
			</div>
		{% elseif vente.futur %}
        {% else %}
			<p>
				Pas de ventes terminées enregistrées actuellement</p>
		{% endif %}
	{% endfor %}
	<h2>Ventes à venir</h2>
	{% for vente in ventes %}
		{% if vente.futur %}
			<div class="card">
				<a href="#">
					<h5 class="card-header">{{ vente.dateVente ? vente.dateVente|date('d-m-Y H:i:s') : '' }}</h5>
				</a>
				<div class="card-body">
					<h5 class="card-title">{{ vente.nomVente }}
						chez
						{{ vente.commissairePriseur }}</h5>
					<p class="card-text">{{ vente.adresse }}</p>
					<p class="card-text">{{ vente.codePostal }}
						{{ vente.ville }}</p>
					<p class="card-text">Exposition des lots le
						{{ vente.dateExposition ? vente.dateExposition|date('d-m-Y') : '' }}
						entre
						{{ vente.heureExposition }}</p>
					<a class="btn btn-primary" href="{{ path('app_vente_show', {'id': vente.id}) }}">Voir les lots</a>
				</div>
			</div>
        {% elseif vente.passe %}
		{% else %}
			<p>pas de ventes prévues actuellement</p>
		{% endif %}
	{% endfor %}
{% endblock %}
